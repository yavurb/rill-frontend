---
import { removeTrailingSlash } from "@/lib/utils";
import { ModeToggle } from "@/components/ModeToggle";

const pathname = removeTrailingSlash(Astro.url.pathname);

const paths = [
  {
    path: "/",
    navName: "Home",
  },
  {
    path: "/broadcasts",
    navName: "Broadcasts",
  },
];
---

<header
  class="container sticky top-0 z-50 w-full border-b border-border/40 backdrop-blur flex max-w-screen-2xl gap-2 md:justify-between h-14 items-center font-light"
  items-center
>
  <!-- <a href={`mailto:${presentation.mail}`} class="hover:text-neutral-100"
    >{presentation.mail}</a
  > -->
  <div class="mr-4 hidden md:flex">
    <a href="/" class="mr-6 flex items-center space-x-2">
      <span class="hidden sm:inline-block font-logo text-xl font-bold">
        rill
      </span>
    </a>
    <nav role="navigation" class="flex items-center">
      <ul role="list" class="flex flex-row gap-2">
        {
          paths.map((pathObject, index) => (
            <>
              <li>
                <a
                  href={pathObject.path}
                  class:list={{
                    ["hover:text-primary/75"]: true,
                    ["text-primary/50"]: pathname !== pathObject.path,
                    ["text-primary"]: pathname === pathObject.path,
                  }}
                >
                  {pathObject.navName}
                </a>
              </li>
            </>
          ))
        }
      </ul>
    </nav>
  </div>
  <ModeToggle client:load />
</header>
